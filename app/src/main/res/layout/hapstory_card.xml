<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/A"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="#009988"
        android:gravity="center"
        android:text="A"
        android:textColor="#ffffff"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/B"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_toEndOf="@+id/A"
        android:background="#89060c"
        android:gravity="center"
        android:text="B"
        android:textColor="#ffffff"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/C"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_below="@+id/A"
        android:background="#a30b78"
        android:gravity="center"
        android:text="C"
        android:textColor="#ffffff"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/D"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:background="#700ba3"
        android:gravity="center"
        android:text="D"
        android:textColor="#ffffff"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/E"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="#310ba3"
        android:gravity="center"
        android:text="E"
        android:textColor="#ffffff"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/F"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="#087b97"
        android:gravity="center"
        android:text="F"
        android:textColor="#ffffff"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/G"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerInParent="true"
        android:background="#0ba310"
        android:gravity="center"
        android:text="G"
        android:textColor="#ffffff"
        android:textSize="36sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Hello Rukayat" />
</RelativeLayout>
