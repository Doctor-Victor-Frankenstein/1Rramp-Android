<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.InfoEditingActivity">

    <RelativeLayout
        android:id="@+id/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginBottom="4dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:text="Enter Your Bio"
            android:textColor="@color/Black87"
            android:textSize="18sp" />

    </RelativeLayout>

    <EditText
        android:id="@+id/bioEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/okBtn"
        android:layout_below="@+id/toolbar_container"
        android:layout_margin="8dp"
        android:background="@drawable/blank_input_bg"
        android:gravity="top"
        android:hint="Type Here..."
        android:padding="8dp" />

    <TextView
        android:id="@+id/okBtn"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:background="@drawable/filled_btn_bg"
        android:gravity="center"
        android:padding="8dp"
        android:text="OK"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/cancelBtn"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:background="@drawable/light_btn_bg"
        android:gravity="center"
        android:padding="8dp"
        android:text="CANCEL"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />


</RelativeLayout>
