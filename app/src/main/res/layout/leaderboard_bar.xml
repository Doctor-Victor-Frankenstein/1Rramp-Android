<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:animateLayoutChanges="true"
    android:background="#ededed"
    android:layout_height="64dp">

    <ImageView
        android:id="@+id/leader_board_icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:src="@drawable/leader_cup_filled"
        android:layout_width="24dp"
        android:layout_height="24dp" />

    <TextView
        android:layout_toRightOf="@+id/leader_board_icon"
        android:text="Leaderboard"
        android:layout_centerVertical="true"
        android:textColor="@color/Black87"
        android:textSize="14sp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/leader1"
        android:layout_toLeftOf="@+id/leader2"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:src="@drawable/leader_image_placeholder"
        android:layout_width="36dp"
        android:layout_height="36dp" />

    <ImageView
        android:layout_toLeftOf="@+id/leader3"
        android:id="@+id/leader2"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:src="@drawable/leader_image_placeholder"
        android:layout_width="36dp"
        android:layout_height="36dp" />

    <ImageView
        android:layout_marginRight="8dp"
        android:id="@+id/leader3"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:src="@drawable/leader_image_placeholder"
        android:layout_width="36dp"
        android:layout_height="36dp" />

    <TextView
        android:clickable="true"
        android:visibility="gone"
        android:background="?selectableItemBackgroundBorderless"
        android:id="@+id/view_all"
        android:layout_marginRight="8dp"
        android:layout_gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="@color/Black87"
        android:text="View All"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    </LinearLayout>
</RelativeLayout>